<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="juego.Views.PrincipalView"
             BackgroundColor="#171818">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="30">
            <StackLayout.Resources>
                <Style TargetType="Button">
                    <Setter Property="TextColor" Value="White"></Setter>
                    <Setter Property="FontSize" Value="20"></Setter>
                </Style>
            </StackLayout.Resources>
            <Button Text="Jugar   ▶" BackgroundColor="#367E8D" FontAttributes="Bold"></Button>
            <Button Text="👑 Mis récords   👑" BackgroundColor="#EDEF98" TextColor="Black"></Button>
            <Button Text="Salir" BackgroundColor="#DD1313" Margin="70,90,70,0" FontSize="15"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>