<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:juego.ViewModels"
             x:Class="juego.Views.ProgresoView"
             Title="Mis récords"
             BackgroundColor="#171818">
    <ScrollView>
        <StackLayout Margin="10" BindableLayout.ItemsSource="{Binding Reporte}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Frame>
                        <StackLayout BackgroundColor="Red">
                            <Grid>
                                <Label></Label>
                            </Grid>
                            <Label Text="{Binding Puntuacion}"></Label>
                            <Label Text="{Binding Intentos}"></Label>
                            <Label Text="{Binding Fecha}"></Label>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </ScrollView>
</ContentPage>